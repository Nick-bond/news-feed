{
  "name": "news-feed",
  "version": "1.0.0",
  "description": "News feed",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=production npm run client && node app.js",
    "heroku-prebuild": "npm install --prefix app",
    "heroku-postbuild": "npm run build --prefix app",
    "server": "nodemon app.js",
    "client": "npm run start --prefix app",
    "client-install": "npm install --prefix app",
    "client:build": "npm run build --prefix app",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": [
    "news"
  ],
  "author": "Nick Bond",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.24"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4"
  }
}
